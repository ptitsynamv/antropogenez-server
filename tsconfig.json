{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "*.ts"
  ],
  "exclude":[
    "node_modules",
    "build"
  ]
}
