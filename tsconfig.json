{
  "include": [
    "**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "/node_modules/**"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
